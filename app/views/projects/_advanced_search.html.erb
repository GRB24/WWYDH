<div class="container-fluid">
  <div class="row">
    <!-- <div class="col-sm-4 col-sm-offset-4"> -->
    <h4 class="text-center">Advanced Search: Projects</h4>
    <br>
    <div class="col-sm-12">
      <% if request.path.include?('projects') then @remote_flag = true end %>

      <%= form_tag projects_path, method: "get", id: "search-form", remote: @remote_flag do %>
        <%= text_field_tag :title, params[:title], class: "form-control", placeholder: "Search Title" %><br>
        <%= number_field_tag :stage, params[:stage], class: "form-control", placeholder: "Search Stage" %><br>
        <%= text_field_tag :description, params[:description], class: "form-control", placeholder: "Search Description" %><br>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
