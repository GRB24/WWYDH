<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6">
      <%= form_tag vacants_path, method: "get", id: "search-form" do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Address" %>
          <span class="input-group-btn">
            <%= submit_tag "Search", class: "btn btn-default" %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>
