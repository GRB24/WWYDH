<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag 'application', media: 'all',
                          'data-turbolinks-track' => true %>
  <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet'
        type='text/css'>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="keywords" content="What, Would, You, Do, Here" />
  <%= render 'layouts/shim' %>
</head>
<body>

  <%= render 'layouts/header' %>

  <div class="input-group">
  <!-- When submit the form, the view rendered will be the index view of our articles resource -->
  <%= form_tag(vacants_path, :method => "get", class: "form-control", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Vacants" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
           of using a Rails form helper -->
      <!-- <button class="btn" type="submit"><i class="icon-search"></i></button> -->
      <button class="btn btn-default" type="submit">Go!</button>
    </div>
  <% end %>
</div>

  <div class="container-fluid">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>

    <%= yield %>
  </div>

  <%= render 'layouts/footer' %>

</body>
</html>
