<% provide(:title, @vacant.full_address) %>

<section class="full">
	<div class="container">
		<h1 class="address"><%= @vacant.full_address %></h1>
	</div>
	<div class="container">
		<span class="pic">
			<%= image_tag("https://maps.googleapis.com/maps/api/streetview?size=400x400&location=#{@vacant.latitude},#{@vacant.longitude}&fov=90") %>

		</span>
		<span class="infoContainer">
		<div class="info"><%= @vacant.city %> <%= @vacant.zip_code%></div>

			<div class="info">Neighborhood: <%= @vacant.neighborhood %></div>
			<div class="info">Police District: <%= @vacant.police_district%></div>
			<div class="info">Council District: <%= @vacant.council_district %></div>

			<div class="info">Owner: <%= @vacant.owner %></div>

			<div class="info">Use: <%= @vacant.use %></div>
			<div class="info">Mail: <%= @vacant.mailing_address %> </div>


			<div class="info"><%= link_to 'Back', vacants_path %></div>
		</span>

	</div>


		<div id="vacant-show-map-container">
		<%= render 'gmaps' %>
		</div>


	<div class="container">

		<h1 >Projects</h1>
		<div class = "center-text-projects"><%= link_to "Create a project here!", new_project_path(vacant: @vacant) %></span>

			<% unless @projects.present? %>
				<div>There are no projects at this location yet!</div>
			<% else %>
				<% @projects.each do |project| %>
					<div class="projectInfo">
					<!--<%= project.title %>-->
					<%= link_to project.title, project_path(id: project.id) %>
					</div>
				<% end %>
			<% end %>

	</div>
</section>
