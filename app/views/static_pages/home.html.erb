<% provide(:title, 'Home') %>
<% provide(:class, 'full') %>

<div class="text-center" style="background: transparent;">
  <%= image_tag "whitelogo.png", style: "text-align: center; padding: 0px;",
                                 class: "img-responsive center-block" %>
</div>

<br>
<br>

<!-- Begin pills/tabs -->
<div class="row">

  <div class="col-sm-6 centered-pills">
    <h2 class="text-center" style="color: white;">
      Search for Projects and Locations
    </h2>
    <br>
    <ul class="nav nav-pills">
      <li class="active">
        <a data-toggle="pill" href="#home" style="color: white;">
          <h4>Locations</h4>
        </a>
      </li>
      <li>
        <a data-toggle="pill" href="#menu1" style="color: white;">
          <h4>Projects</h4>
        </a>
      </li>
    </ul>

    <!-- <br> -->

    <div class="tab-content text-center">
      <div id="home" class="tab-pane fade in active">
        <%= render 'vacants/advanced_search' %>
      </div>
      <div id="menu1" class="tab-pane fade">
        <%= render 'projects/advanced_search' %>
      </div>
    </div>

  </div>

  <div class="col-sm-6" >
    <h2 class="text-center" style="color: white;">
      Or Find Locations Near You
    </h2>

    <br>

    <%= render 'gmaps' %>
  </div>

</div>
<!-- End pills/tabs -->

<br>
<br>
<div class="container">
  <div class="row vertical-center-row">
    <div class="text-center col-sm-6 col-sm-offset-3">
      <blockquote>
        <p class="text-center" style="font-size: 1.2em; color: #333333;">
          WWYDH facilitates economic and social revitalization in Baltimore by
          combining the existing vacant and underutilized built infrastructure with
          the creative imagination and skills of people throughout the city.  We
          begin by asking the simplest question, "What would you do here?"
        </p>
        <!-- <footer class="text-right">John Doe</footer> -->
      </blockquote>
    </div>
  </div>
</div>
<br>
<div class="container container-gloss">
  <div class="row">
    <div class="col-sm-12">
      <h1 style="color: grey;">How It Works</h1>
    </div>
    <div class="col-sm-4">
      <h3 class="text-center">Idea</h3>
      <h1 id = "white-title-home"><%= image_tag("idea.png", height:'160', width:'160') %></h1>
      <p class="text-center">
        Submit an idea to WWYDH. Once it gets enough upvotes from other users,
        you have the ability as idea leader to move your idea on to the next
        stage.
      </p>
    </div>
    <div class="col-sm-4">
      <h3 class="text-center">Matchmaking</h3>
      <h1 id = "white-title-home"><%= image_tag("matchmaking.png", height:'160', width:'160') %></h1>
      <p class="text-center">
        Your idea is matched with other ideas for the same vacant location. A
        checklist of people and resources your idea will need is generated.
        Once the checklist is complete, your idea is reviewed so it can move on
        to the next stage.
      </p>
    </div>
    <div class="col-sm-4">
      <h3 class="text-center">Implementation</h3>
      <h1 id = "white-title-home"><%= image_tag("implementation.png", height:'160', width:'160') %></h1>
      <p class="text-center">
        Your idea becomes a project, and the project is implemented by anyone
        willing to contribute his or her time and skills to turn a vacant lot
        into a useful space for the community.
      </p>
    </div>
  </div>
</div>
<br>

<!-- Page Content -->
<div class="container container-gloss">

  <!-- Page Header -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Projects in Motion
        <small>Projects</small>
      </h1>
    </div>
  </div>
  <!-- /.row -->

  <!-- Projects Row -->
  <div class="row">
    <% @projects.each do |p| %>
      <%= render 'project_card', item: p %>
    <% end %>
  </div>
  <!-- /.row -->
  
  <br><br>

</div>

<br>

<div class="container container-gloss">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Get Started
        <small style="color: #428bca;">Links</small>
      </h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <h3 class="text-center">Projects</h3>
      <ul id="links_from_home" class="text-center">
        <li>
          <%= link_to 'View all projects', projects_path %>
        </li>
      </ul>
    </div>
    <div class="col-sm-4">
      <h3 class="text-center">Users</h3>
      <ul id="links_from_home" class="text-center">
        <li>
          <%= link_to 'Create an account', new_user_path %>
        </li>
        <li>
          <%= link_to 'View all users', users_path %>
        </li>
      </ul>
    </div>
    <div class="col-sm-4">
      <h3 class="text-center">Locations</h3>
      <ul id="links_from_home" class="text-center">
        <li>
          <%= link_to 'Submit a location', new_vacant_path %>
        </li>
        <li>
          <%= link_to 'View all locations', vacants_path %>
        </li>
      </ul>
    </div>
  </div>
</div>
