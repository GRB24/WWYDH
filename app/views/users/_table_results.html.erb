<table class="table table-hover">
  <h4 class="text-center">
    <%= page_entries_info @users, model: 'user' %>
  </h4>
  <br>
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.user_id %></th>
        <td><%= link_to user.firstname, user_path(user) %></td>
        <td><%= user.lastname %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= js_will_paginate @users, previous_label: "&larr; Prev",
  next_label: "Next &rarr;", style: "display: inline-block;",
  inner_window: 1, outer_window: 0 %>
</div>
