<div class="container-fluid">
  <div class="row">
    <!-- <div class="col-sm-4 col-sm-offset-4"> -->
    <h4 class="text-center">Advanced Search: Users</h4>
    <br>
    <div class="col-sm-12">
      <% if request.path.include?('users') then @remote_flag = true end %>

      <%= form_tag users_path, method: "get", id: "search-form", remote: @remote_flag do %>
        <%= text_field_tag :firstname, params[:firstname], class: "form-control", placeholder: "Search First Name" %><br>
        <%= text_field_tag :lastname, params[:lastname], class: "form-control", placeholder: "Search Last Name" %><br>
        <%= hidden_field_tag :isadmin, 'false' %>
        <%= check_box_tag :isadmin, true %>
        <h4>Admin</h4>
        <br>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
