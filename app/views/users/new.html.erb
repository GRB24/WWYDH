<h1>Users#new</h1>
<%= form_for(@user, url: users_path ) do |f| %>
<%= render 'shared/error_messages' %>
<div class = "field"> <%= f.label :first_name %> <br/> <%= f.text_field :firstname %> </div>
<div class = "field"> <%= f.label :last_name %> <br/> <%= f.text_field :lastname %> </div>
<div class = "field"> <%= f.label :email %> <br/> <%= f.text_field :email %> </div>

<div class = "field"> <%= f.label :password %> <br/> <%= f.password_field :password %> </div>
<div class = "field"> <%= f.label :password_confirmation %> <br/> <%= f.password_field :password_confirmation %> </div>
<div class="actions"> <%= f.submit "Login" %> </div>
<% end %>
